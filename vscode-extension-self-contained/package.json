{
    "name": "vscode-nusmv",
    "displayName": "NuSMV VSCode Extension",
    "description": "NuSMV extension for VSCode",
    "version": "0.0.1",
    "publisher": "liam",
    "license": "EPL-1.0",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:nusmv"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "nusmv",
                "aliases": [
                    "NuSMV"
                ],
                "extensions": [
                    ".smv"
                ],
                "configuration": "./nusmv.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "nusmv",
                "scopeName": "text.nusmv",
                "path": "./syntaxes/nusmv.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "smv.a.proxy",
                "title": "SMV Test Command A"
            },
            {
                "command": "smv.b",
                "title": "SMV Test Command B"
            }
        ]
    },
    "devDependencies": {
        "vscode": "^1.1.33",
        "typescript": "^3.3.400",
        "@types/node": "^11.13.2"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    },
    "scripts": {
        "prepublish": "node ./node_modules/vscode/bin/install && tsc -p ./src",
        "compile": "tsc -p ./src",
        "watch": "tsc -w -p ./src",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
