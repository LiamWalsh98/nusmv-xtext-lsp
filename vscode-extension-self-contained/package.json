{
    "name": "vscode-nusmv",
    "displayName": "NuSMV VSCode Extension",
    "description": "NuSMV extension for VSCode",
    "version": "0.0.1",
    "publisher": "LiamWalsh98",
    "license": "EPL-1.0",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:nusmv",
        "onCommand:nusmv.createTerminal",
        "onCommand:nusmv.runCurrent"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "nusmv",
                "aliases": [
                    "NuSMV"
                ],
                "extensions": [
                    ".smv"
                ],
                "configuration": "./nusmv.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "nusmv",
                "scopeName": "text.nusmv",
                "path": "./syntaxes/nusmv.tmLanguage.json"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "nusmv.runCurrent",
                    "when": "editorLangId == nusmv"
                }
            ]
        },
        "commands": [
            {
                "command": "nusmv.createTerminal",
                "title": "NuSMV: New Interactive Shell"
            },
            {
                "command": "nusmv.runCurrent",
                "title": "NuSMV: Run Current Model"
            }
        ],
        "keybindings": [
            {
                "command": "nusmv.createTerminal",
                "key": "ctrl+i",
                "mac": "cmd+i"
            },
            {
                "command": "nusmv.runCurrent",
                "key": "ctrl+r",
                "mac": "cmd+r"
            }
        ]
    },
    "devDependencies": {
        "vscode": "^1.1.33",
        "typescript": "^3.3.400",
        "@types/node": "^11.13.2"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    },
    "scripts": {
        "prepublish": "node ./node_modules/vscode/bin/install && tsc -p ./src",
        "compile": "tsc -p ./src",
        "watch": "tsc -w -p ./src",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
